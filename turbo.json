{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**"
      ],
      "env": [
        "APP_URL",
        "APP_API_URL",
        "APP_API_PAYMENT",
        "APP_CLIENT_ID",
        "APP_X_TENANT",
        "APP_KUN_LUN",
        "APP_REDIRECT_URL",
        "APP_PLATFORM"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}